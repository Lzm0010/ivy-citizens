<div id="filterrific_results">
    <table class="table table-striped table-hover">
        <tr>
            <th>Name</th>
            <th>SKU</th>
            <th><%= filterrific_sorting_link(@filterrific, :amount) %></th>
        </tr>
        <% products.each do |product| %>
            <tr>
                <td><%= link_to product.name, product %></td>
                <td><%= product.sku %></td>
                <td><%= product.amount %></td>
            </tr>
        <% end %>
    </table>
</div>